<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN"
    "http://struts.apache.org/dtds/struts-2.1.dtd">

<struts>
  <!-- To get Struts 2 to find `action` classes.  NOTE: `value` attribute
       takes the last qualified package name of the `action` class.

       For example, if the fully qualified class name `action` class is:

       org.myself.test.code.Action

       Then, the `value` attribute would be `code`
  -->
  <constant name="struts.convention.package.locators" value="controllers"/>

  <!-- For Struts 2 REST plug-in -->
  <constant name="struts.convention.action.suffix" value="Controller"/>
  <constant name="struts.convention.action.mapAllMatches" value="true"/>
  <constant name="struts.convention.default.parent.package" value="rest-default"/>
  <!-- guice integration -->
  <constant name="struts.objectFactory" value="guice" />
  <constant name="guice.module" value="csiro.diasb.dao.ServicesModule"/>
 </struts>
